{
  "name": "component-library-native-3",
  "version": "1.0.5",
  "description": "Cross-platform React Native component library that works on web without requiring react-native-web",
  "module": "dist/esm/index.js",
  "react-native": "dist/native/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "react-native": "./dist/native/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist",
    "prepare": "npm run build"
  },
  "dependencies": {
    "react": ">=16.8.0",
    "react-dom": "^18.2.0",
    "react-native": ">=0.59.0",
    "react-native-web": "^0.19.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.1",
    "@types/react": "^18.2.8",
    "@types/react-native": "^0.72.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.23.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "peerDependenciesMeta": {
    "react-native-web": {
      "optional": true
    }
  },
  "keywords": [
    "react",
    "react-native",
    "component-library",
    "cross-platform",
    "react-native-web"
  ],
  "author": "Yeshwant Thota",
  "license": "MIT"
}
